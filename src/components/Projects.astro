---

import Swift from "../icons/Swift.astro"

const TAGSICONS = {

   SWIFT : {
        name: "Swift",
        class: "bg-[#ed6348] text-",
        icon: Swift
    },
    SWIFTUI : {
        name: "Swift UI",
        class: "bg-[#3375ee] text-white",
        icon: Swift
    },
    SWIFTDATA : {
        name: "Swift Data",
        class: "bg-[#8095a3] text-white",
        icon: Swift
    }


}






const PROJECTS = [
    {
        title: "Dilo con Señas - Aprende Lenguaje de Señas",
        description:"Este proyecto de Swift es una aplicación móvil interactiva diseñada para ayudar a las personas a aprender el lenguaje de señas a través de un juego de quiz y una sección de aprendizaje tipo diccionario.",
        image: "/public/Projects/ss-1.webp",
        github: "https://github.com/Patroncito/manosquehablan",
        tags: [TAGSICONS.SWIFT, TAGSICONS.SWIFTUI, TAGSICONS.SWIFTDATA]
    }
]
---

{
    PROJECTS.map(({ image, title, description, tags})=> (
        <article>
            <h3 class="text-xl font-semibold text-blue-200 mb-2">{title}</h3>
            <p class=" mb-4">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-4">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs items-center ${tag.class} py-1 px-2`}>
                        <tag.icon class="size-4"/>
                        {tag.name}
                    </span>
                    </li>
                    ))}
            </ul>
        
            <img class="rounded shadow-2xl shadow-white/10" 
            src={image} 
            alt="Captura de pantalla del proyecto">
        </article>


    ))

}