---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SocialBadge from "../components/SocialBadge.astro"
import LinkedInIcon from "../icons/LinkedIn.astro"
import GithubIcon from "../icons/Github.astro"
import MailIcon from "../icons/Mail.astro"
import Experience from "../components/Experience.astro"
import CodeIcon from "../icons/Code.astro"
import Projects from '../components/Projects.astro';
import Briefcase from "../icons/Briefcase.astro"
---

<Layout 
title="Portafolio - Alfonso Patron desarrollador, programador e ingeniero iOS con 2 años de experiencia con experiencia en solucionar problemas. "
description ="Contrata a alfonso patron para crear tus aplicaciones moviles en iOS o Android y mejorar el alcance de todos tus proyectos, tanto en desarollo como en planeación."
>
 
    <main class="px-2">
        <SectionContainer class="py-44 pb-20">
            <h1 class="text-white text-3xl md:text-4xl lg:text-5xl  font-bold flex flex-row gap-x-4 pb-4" >Hey, soy Alfonso<a class="flex justify-center items-center" href="https://www.linkedin.com/in/alfonsopatron/" target="_blank"><Badge>Disponible para trabajar</Badge></a>  
            </h1>
            <h2 class="text-xl lg:text-2xl text-white opacity-90 text-wrap max-w-[640px]">
                <span>+2 Años de Experiencia.</span>
                 <span class="text-yellow-200/90">Desarrollador Movil iOS y Diseñador de Interfaces. </span>
                Desde La Paz, Mexico</span> 🇲🇽. Con la unica misión de crear aplicaciones fantasticas. 
            </h2>
            
            <nav class="flex gap-8 mt-8 flex-wrap">
                <SocialBadge href="https://www.linkedin.com/in/alfonsopatron/">
                    <LinkedInIcon class="size-4 md:size 6" />
                    Linkedin
                </SocialBadge>

                <SocialBadge href="https://github.com/patroncito">
                    <GithubIcon class="size-4 md:size-6" />
                    Github
                </SocialBadge>
                <SocialBadge href="mailto:c9alfonsopatron@hotmail.com?subject=Propuesta de Trabajo/Proyectoo&body=Hola, que tal Alfonso...">
                    <MailIcon class="size-4 md:size 6" />
                    c9alfonsopatron@hotmail.com
                </SocialBadge>
            </nav>
        </SectionContainer>

        <SectionContainer id="experiencia">
            <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center mb-"></span>Experiencia Laboral</h2>
            <Experience>
            </Experience>
        </SectionContainer>



        <SectionContainer id="proyectos" class="py-24">
            <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
                <CodeIcon class="lg:size-7"/>
                Proyectos
            </h2>
            <Projects>

            </Projects>
        </SectionContainer>
    </main>
</Layout>
