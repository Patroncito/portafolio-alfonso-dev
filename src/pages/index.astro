---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SocialBadge from "../components/SocialBadge.astro"
import LinkedInIcon from "../icons/LinkedIn.astro"
import GithubIcon from "../icons/Github.astro"
import MailIcon from "../icons/Mail.astro"
import Experience from "../components/Experience.astro"

---

<Layout 
title="Portafolio - Alfonso Patron desarrollador, programador e ingeniero iOS con 2 años de experiencia con experiencia en solucionar problemas. "
description ="Contrata a alfonso patron para crear tus aplicaciones moviles en iOS o Android y mejorar el alcance de todos tus proyectos, tanto en desarollo como en planeación."
>
 
    <main>
        <SectionContainer class="py-44 pb-20">
            <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4" >Hey, soy Alfonso<a class="flex justify-center items-center" href="https://www.linkedin.com/in/alfonsopatron/" target="_blank"><Badge>Disponible para trabajar</Badge></a>  
            </h1>
            <h2 class="text-white text-xl opacity-90">
                <span>+2 Años de Experiencia.</span>
                 <span class="text-yellow-200/90">Desarrollador Movil iOS y Diseñador de Interfaces. </span>
                Desde La Paz, Mexico</span> 🇲🇽. Con la unica misión de crear aplicaciones fantasticas. 
            </h2>
            
            <nav class="flex gap-x-4 mt-8">
                <SocialBadge href="https://www.linkedin.com/in/alfonsopatron/">
                    <LinkedInIcon class="w-6 h-6" />
                    Linkedin
                </SocialBadge>

                <SocialBadge href="https://github.com/patroncito">
                    <GithubIcon class="w-6 h-6" />
                    Github
                </SocialBadge>
                <SocialBadge href="mailto:c9alfonsopatron@hotmail.com?subject=Propuesta de Trabajo/Proyectoo&body=Hola, que tal Alfonso...">
                    <MailIcon class="size-6" />
                    c9alfonsopatron@hotmail.com
                </SocialBadge>
            </nav>
        </SectionContainer>

        <SectionContainer id="experiencia">
            <h2 class="text-2xl font-semibold mb-8">Experiencia Laboral</h2>
            <Experience>
            </Experience>
        </SectionContainer>
    </main>
</Layout>
